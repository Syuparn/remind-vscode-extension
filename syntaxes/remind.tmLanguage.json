{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Re:Mind",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#blocks"
		},
		{
			"include": "#expressions"
		},
		{
			"include": "#statements"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"include": "#lineComments"
				},
				{
					"include": "#blockComments"
				}
			]
		},
		"lineComments": {
			"name": "comment.line.remind",
			"match": "//.*\\n"
		},
		"blockComments": {
			"name": "comment.block.remind",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"expressions": {
			"patterns": [
				{
					"include": "#literals"
				},
				{
					"include": "#variables"
				},
				{
					"include": "#callExpressions"
				}
			]
		},
		"callExpressions": {
			"patterns": [
				{
					"include": "#functionCall"
				}
			]
		},
		"functionCall": {
			"name": "support.function.remind",
			"begin": "[\\w_][\\d\\w_]*\\(",
			"end": "\\)",
			"patterns": [
				{
					"include": "#arguments"
				},
				{
					"include": "#expressions"
				},
				{
					"name": "invalid.illegal.remind",
					"match": "[^=\\)]*"
				}
			]
		},
		"arguments": {
			"match": "([^,]+)\\s*,\\s*([^)]+)",
			"captures": {
				"1": {
					"patterns": [
						{
							"include": "#expressions"
						}
					]
				},
				"2": {
					"patterns": [
						{
							"include": "#arguments"
						},
						{
							"include": "#expressions"
						}
					]
				}
			}
		},
		"variables": {
			"name": "variable.name.remind",
			"match": "[\\w_][\\d\\w_]*"
		},
		"literals": {
			"patterns": [
				{
					"include": "#numbers"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#booleans"
				},
				{
					"include": "#null"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.remind",
			"match": "([0-9]+\\.)?([0-9]+)"
		},
		"strings": {
			"name": "string.quoted.double.remind",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.remind",
					"match": "\\\\."
				}
			]
		},
		"booleans": {
			"name": "constant.language.remind",
			"match": "(true|false)"
		},
		"null": {
			"name": "constant.language.remind",
			"match": "null"
		},
		"statements": {
			"patterns": [
				{
					"include": "#loopControllers"
				},
				{
					"include": "#declalations"
				},
				{
					"include": "#assignStatements"
				},
				{
					"include": "#procedureStatements"
				}
			]
		},
		"loopControllers": {
			"match": "(□)(脱出する|ループ先頭へ|反復処理)",
			"captures": {
				"1": {
					"name": "keyword.other.remind"
				},
				"2": {
					"name": "keyword.control.remind"
				}
			}
		},
		"declalations": {
			"name": "keyword.other.remind",
			"begin": "・\\s*",
			"end": "(\\s*\\=|\\n)",
			"patterns": [
				{
					"include": "#variableDeclarations"
				},
				{
					"include": "#anonymousDeclarations"
				},
				{
					"name": "invalid.illegal.remind",
					"match": "[^=\\s]*"
				}
			]
		},
		"variableDeclarations": {
			"name": "keyword.control.remind",
			"begin": "(変数|定数)",
			"end": "\\s",
			"patterns": [
				{
					"include": "#anonymousDeclarations"
				},
				{
					"name": "invalid.illegal.remind",
					"match": "[^\\s]*"
				}
			]
		},
		"anonymousDeclarations": {
			"match": "([^=\n]+)\\s+([^\\s=\n]+)",
			"captures": {
				"1": {
					"name": "support.type.remind"
				},
				"2": {
					"name": "variable.name.remind"
				}
			}
		},
		"assignStatements": {
			"name": "keyword.other.remind",
			"begin": "□\\s*",
			"end": "(\\s*\\=|\\s)",
			"patterns": [
				{
					"include": "#variables"
				},
				{
					"include": "#inversionFunctionCall"
				},
				{
					"name": "invalid.illegal.remind",
					"match": "[^\\s=]*"
				}
			]
		},
		"procedureStatements": {
			"name": "keyword.other.remind",
			"begin": "□\\s*",
			"end": "\\n",
			"patterns": [
				{
					"include": "#inversionFunctionCall"
				}
			]
		},
		"inversionFunctionCall": {
			"name": "keyword.other.remind",
			"begin": "\\(",
			"end": "\\)\\s*(で|を)\\s*(\\w+)\\s",
			"endCaptures": {
				"1": {
					"name": "keyword.control.remind"
				},
				"2": {
					"patterns": [
						{
							"name": "keyword.control.remind",
							"match": "返す"
						},
						{
							"include": "#variables"
						},
						{
							"name": "invalid.illegal.remind",
							"match": "[^\\s]+"
						}
					]
				}
			},
			"patterns": [
				{
					"include": "#arguments"
				},
				{
					"include": "#expressions"
				}
			]
		},
		"blocks": {
			"patterns": [
				{
					"include": "#functions"
				},
				{
					"include": "#finalControlClauses"
				},
				{
					"include": "#controlClauses"
				},
				{
					"include": "#finalLoopClauses"
				},
				{
					"include": "#loopClauses"
				}
			]
		},
		"functions": {
			"name": "keyword.other.remind",
			"begin": "▽",
			"end": "\\(([^)\\n]*)\\)\\s",
			"endCaptures": {
				"1": {
					"patterns": [
						{
							"include": "#parameters"
						}
					]
				}
			},
			"patterns": [
				{
					"include": "#signatures"
				}
			]
		},
		"parameters": {
			"match": "([^),\n]+)\\s+([^,\\s)\n]+)(,([^)\n]+))?",
			"captures": {
				"1": {
					"name": "support.type.remind"
				},
				"2": {
					"name": "variable.name.remind"
				},
				"4": {
					"patterns": [
						{
							"include": "#parameters"
						}
					]
				}
			}
		},
		"signatures": {
			"match": "(([^(\n]+)\\s+)?([^\\s(\n]+)",
			"captures": {
				"1": {
					"name": "support.type.remind"
				},
				"3": {
					"name": "variable.name.remind"
				}
			}
		},
		"controlClauses": {
			"begin": "(◇)(他に)?",
			"beginCaptures": {
				"1": {
					"name": "keyword.other.remind"
				},
				"2": {
					"name": "keyword.control.remind"
				}
			},
			"end": "(の場合|で分岐する|\n)",
			"endCaptures": {
				"1": {
					"name": "keyword.control.remind"
				}
			},
			"patterns": [
				{
					"include": "#expressions"
				}
			]
		},
		"finalControlClauses": {
			"match": "(◇)(既定|ここまで)",
			"captures": {
				"1": {
					"name": "keyword.other.remind"
				},
				"2": {
					"name": "keyword.control.remind"
				}
			}
		},
		"loopClauses": {
			"begin": "(〇)",
			"beginCaptures": {
				"1": {
					"name": "keyword.other.remind"
				}
			},
			"end": "((の間は)?繰り返す)",
			"endCaptures": {
				"1": {
					"name": "keyword.control.remind"
				}
			},
			"patterns": [
				{
					"include": "#expressions"
				},
				{
					"match": "(([^\\=\n,]+)\\s+)?([^\\s\\=\n,]+)\\s*\\=\\s*([^,]+),([^,]+),([^繰])+\\s",
					"captures": {
						"1": {
							"name": "support.type.remind"
						},
						"2": {
							"name": "variable.name.remind"
						},
						"3": {
							"patterns": [
								{
									"include": "#expressions"
								}
							]
						},
						"4": {
							"patterns": [
								{
									"include": "#expressions"
								}
							]
						}
					}
				}
			]
		},
		"finalLoopClauses": {
			"match": "(〇)(ここから|ここまで)",
			"captures": {
				"1": {
					"name": "keyword.other.remind"
				},
				"2": {
					"name": "keyword.control.remind"
				}
			}
		}
	},
	"scopeName": "source.remind"
}
