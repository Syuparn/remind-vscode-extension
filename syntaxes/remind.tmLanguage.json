{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Re:Mind",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#statements"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"include": "#lineComments"
				},
				{
					"include": "#blockComments"
				}
			]
		},
		"lineComments": {
			"name": "comment.line.remind",
			"match": "//.*\\n"
		},
		"blockComments": {
			"name": "comment.block.remind",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"literals": {
			"patterns": [
				{
					"include": "#numbers"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#booleans"
				},
				{
					"include": "#null"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.remind",
			"match": "([0-9]+\\.)?([0-9]+)"
		},
		"strings": {
			"name": "string.quoted.double.remind",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.remind",
					"match": "\\\\."
				}
			]
		},
		"booleans": {
			"name": "constant.language.remind",
			"match": "(true|false)"
		},
		"null": {
			"name": "constant.language.remind",
			"match": "null"
		},
		"statements": {
			"name": "keyword.other.remind",
			"begin": "・\\s*",
			"end": "(\\s*\\=|\\s)",
			"patterns": [
				{
					"include": "#variableStatement"
				},
				{
					"include": "#anonymousStatement"
				},
				{
					"name": "invalid.illegal.remind",
					"match": "[^=\\s]*"
				}
			]
		},
		"variableStatement": {
			"name": "keyword.control.remind",
			"begin": "(変数|定数)",
			"end": "\\s",
			"patterns": [
				{
					"include": "#anonymousStatement"
				},
				{
					"name": "invalid.illegal.remind",
					"match": "[^\\n]*"
				}
			]
		},
		"anonymousStatement": {
			"match": "([^=\n]+)\\s+([^\\s=\n]+)",
			"captures": {
				"1": {
					"name": "support.type.remind"
				},
				"2": {
					"name": "variable.name.remind"
				}
			}
		}
	},
	"scopeName": "source.remind"
}
